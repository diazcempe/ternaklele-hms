{
  "ConnectionStrings": {
    "TernakLeleHmsContext": "Data Source=.\\SQLEXPRESS;Initial Catalog=ternaklele-hms-db;Integrated Security=True;MultipleActiveResultSets=True"
  },
  "MongoConnection": {
    "ConnectionString": "mongodb://admin:$eG0Wad3r!@localhost",
    "Database": "ternaklele-hms-db"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Literate" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "LiterateConsole" },
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\obs-api-{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {RequestId} {RequestorId} {RequestorName}-{SourceContext} {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@Level = 'Error' or @Level = 'Fatal'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": ".\\Logs\\obs-api-error-{Date}.log",
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {RequestId} {RequestorId} {RequestorName}-{SourceContext} {Message}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      }
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "SourceContext = 'Microsoft.AspNetCore.Diagnostics.DeveloperExceptionPageMiddleware'"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Ternak Lele HMS Application"
    }
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*"
}